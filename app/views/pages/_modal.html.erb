<!-- Modal -->
<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header" style="background: black;">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h3 class="modal-title text-center white">Set an appointment with us </h3>
      </div>
      <div class="modal-body">
      <!-- Start Form -->
          <%= form_for @client, url: send_path do |client| %>
              <div class="form-group">
                <%= client.label :name %>
                <%= client.text_field :name, class:"form-control"%>
              </div>
              
              <div class="form-group">
                <%= client.label :email %>
                <%= client.email_field :email, class:"form-control"%>
              </div>
              
              <div class="form-group">
                <%= client.label :confirm_email %>
                <%= client.email_field :confirm_email, class:"form-control"%>
              </div>
              
              <div class="form-group">
                <%= client.label :contact_number %>
                <%= client.text_field :name, class:"form-control"%>
              </div>

      </div>
      <div class="modal-footer" style="background: #282828;">  
        <%= client.submit "Send", class:"btn btn-success" %><button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
      </div>
    </div>
        <% end %>
  </div>
</div>