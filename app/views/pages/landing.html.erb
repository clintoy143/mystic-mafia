<script>
$(document).ready(function(){

    $(window).scroll(function() {
        $(".img-des, #visit").each(function(){
          var pos = $(this).offset().top;
      
          var winTop = $(window).scrollTop();
          if (pos < winTop + 600) {
            $(this).delay(500).animate({
                opacity: "1"
            }, 1000);
          }
        });

        $(".slide-right").each(function(){
          var pos = $(this).offset().top;
      
          var winTop = $(window).scrollTop();
          if (pos < winTop + 600) {
            $(this).addClass("slided");
          }
        });        
    }); 

});
</script>


